          "监控"
        ],
        "summary": "获取任务详情",
        "parameters": [
          {
            "type": "string",
            "description": "任务ID",
            "name": "taskId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "任务详情",
            "schema": {
              "$ref": "#/definitions/queue.Task"
            }
          }
        }
      }
    },
    "/monitor/workers": {
      "get": {
