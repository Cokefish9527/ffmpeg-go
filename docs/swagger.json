  "host": "localhost:8082",
  "basePath": "/api/v1",
  "paths": {
    "/video/edit": {
      "post": {
        "description": "提交视频编辑任务",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "视频处理"
        ],
        "summary": "提交视频编辑任务",
        "parameters": [
          {
            "description": "视频编辑请求参数",
            "name": "request",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/api.VideoEditRequest"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "任务已接受处理",
            "schema": {
              "$ref": "#/definitions/api.VideoEditResponse"
            }
          },
          "400": {
            "description": "请求格式错误",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "提交任务失败",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/video/edit/{taskId}": {
      "get": {
        "description": "获取视频编辑任务状态",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "视频处理"
        ],
        "summary": "获取任务状态",
        "parameters": [
          {
            "type": "string",
            "description": "任务ID",
            "name": "taskId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "任务状态",
            "schema": {
              "$ref": "#/definitions/TaskStatusResponse"
            }
          },
          "404": {
            "description": "任务未找到",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "获取任务状态失败",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "取消视频编辑任务",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "视频处理"
        ],
        "summary": "取消任务",
        "parameters": [
          {
            "type": "string",
            "description": "任务ID",
            "name": "taskId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "任务取消成功",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "取消任务失败",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/video/url": {
      "post": {
        "description": "处理视频URL",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "视频处理"
        ],
        "summary": "处理视频URL",
        "parameters": [
          {
            "description": "视频URL请求参数",
            "name": "request",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/VideoURLRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "视频转换成功",
            "schema": {
              "$ref": "#/definitions/VideoURLResponse"
            }
          },
          "400": {
            "description": "请求格式错误",
            "schema": {
              "$ref": "#/definitions/VideoURLResponse"
            }
          },
          "500": {
            "description": "处理视频失败",
            "schema": {
              "$ref": "#/definitions/VideoURLResponse"
            }
          }
        }
      }
    },
